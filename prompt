# mkaz PS1 bash prompt
# vim: syntax=sh ts=4 sw=4 sts=4 sr et

source ~/dotfiles/extras/colors

function set_prompt {
    local __char="☀️ "

    if [ -n "$SSH_CLIENT" ]; then
        __host="\[$Red\] [`hostname`]"
    else
        __host=''
    fi

    local __dir="\[$Yellow\]\w"
    local __git="\[$Green\]\$(__git_ps1)"
    local __prompt="\[$Red\]>"
    local __off="\[$Color_Off\]"

    export PS1="$__char$__host$__git $__dir\n$__prompt $__off"
}
set_prompt

